<idea-plugin>
    <id>com.github.novotnyr.gitlab-quickmr-idea-plugin</id>
    <name>GitLab Quick Merge Request</name>
    <version>4-SNAPSHOT</version>
    <vendor>Róbert Novotný</vendor>

    <description><![CDATA[
      Quickly create Merge Request for GitLab projects<br>
      <ul>
      <li>Quickly create merge requests with default settings and submit them with a single click</li>
      <li>Specify your favourite merge request assignees</li>
      <li>Supports GitLab API v4</li>
      </ul>
    ]]></description>

    <change-notes><![CDATA[
      <p>
      <em>3</em>
      <p><strong>Important!</strong> GitLab API keys are no longer
      stored in the preferences in plain-text. You might need to reapply preferences to store the API key in the IDE password store.</p>
      <ul>
        <li>Support 'Remove Source Branch on Merge'</li>
        <li>Store API keys in the IDE password store</li>
        <li>Improve notification bubbles</li>
      </ul>
      <p>
      <em>2</em>
      <ul>
        <li>User interface improvements</li>
      </ul>
      </p>
      <p>
      <em>1</em>
      <ul>
        <li>Initial Release</li>
      </ul>
      </p>
    ]]>
    </change-notes>

    <idea-version since-build="145.0"/>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.vcs</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.novotnyr.idea.git.GitService"/>
        <projectService serviceImplementation="com.github.novotnyr.idea.gitlab.quickmr.settings.Settings"/>
        <projectService serviceImplementation="com.github.novotnyr.idea.gitlab.GitLabFactory"/>

        <vcsConfigurableProvider implementation="com.github.novotnyr.idea.gitlab.quickmr.settings.SettingsUi$ConfigurableProvider"/>
    </extensions>


    <actions>
        <action id="com.github.novotnyr.idea.gitlab.quickmr.CreateMergeRequestAction"
                class="com.github.novotnyr.idea.gitlab.quickmr.CreateMergeRequestAction" text="Quick Merge Request">
            <add-to-group group-id="Git.ContextMenu"/>
        </action>
        <action class="com.github.novotnyr.idea.gitlab.quickmr.CreateMergeRequestAndAssignToActionGroup" id="com.github.novotnyr.idea.gitlab.quickmr.CreateMergeRequestAndAssignToActionGroup">
            <add-to-group group-id="Git.ContextMenu"/>
        </action>
    </actions>

</idea-plugin>